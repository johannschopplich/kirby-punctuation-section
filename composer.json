{
  "name": "johannschopplich/kirby-punctuation-section",
  "description": "Insert punctuation marks into your text with a single click",
  "type": "kirby-plugin",
  "version": "3.0.1",
  "keywords": [
    "kirby",
    "typography",
    "punctuation",
    "clipboard"
  ],
  "license": "MIT",
  "homepage": "https://github.com/johannschopplich/kirby-punctuation-section#readme",
  "authors": [
    {
      "name": "Johann Schopplich",
      "email": "pkg@johannschopplich.com",
      "homepage": "https://johannschopplich.com"
    }
  ],
  "require": {
    "getkirby/composer-installer": "^1.2"
  },
  "require-dev": {
    "friendsofphp/php-cs-fixer": "@stable",
    "getkirby/cms": "^4"
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "scripts": {
    "fix": "php-cs-fixer fix",
    "dist": "composer install --no-dev --optimize-autoloader"
  },
  "config": {
    "optimize-autoloader": true,
    "allow-plugins": {
      "getkirby/composer-installer": true
    }
  },
  "extra": {
    "kirby-cms-path": false
  }
}
